/* pages/listView/listView.wxss */

.wrapper{
  display: flex;
  flex-direction: column;
  height: 99.8vh;
  width: 100vw;
}

.top-bar{
  display: flex;
  justify-content: space-around;
  height: 6%;
  width: 100%;
  border-top: 2rpx solid #000000;
  border-bottom: 2rpx solid #000000;
}

.top-space{
  height: 100%;
  width: 10%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.top-title{
  height: 100%;
  width: 80%;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 40rpx;
}

.events-part{
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 94%;
  width: 100%;
}

.events{
  display: flex;
  flex-direction: column;
  width: 96vw;
  border: 2rpx solid #888888;
  box-shadow: 3rpx 3rpx 1rpx #888888;
  margin-top: 15rpx;
  margin-bottom: 15rpx;
}

.event-top{
  display: flex;
  justify-content: space-around;
  width: 96vw;
}

.event-top-left{
  display: flex;
  flex-direction: column;
  width: 88vw;
}

.event-top-right{
  display: flex;
  width: 7vw;
  margin-right: 2vw;
}

.event-rows{
  margin-left: 2%;
  margin-right: 2%;
  margin-top: 1%;
  margin-bottom: 1%;
  width: 100%;
  font-size: 25rpx;
}

.event-content{
  width: 93vw;
  border: 2rpx dotted #777777;
}

.event-controls{
  display: flex;
  justify-content: space-around;
}

.event-controls-button{
  display: flex;
  justify-content: center;
  align-items: center;
  height: 60rpx;
  width: 50%;
  font-size: 30rpx;
  margin-top: 10rpx;
  border-top: 1rpx solid #888888;
}

.event-share-button{
  display: flex;
  justify-content: center;
  align-items: center;
  height: 60rpx;
  width: 49%;
  font-size: 33rpx;
  margin-top: 5rpx;
  margin-right: 10rpx;
  border: 1rpx solid #888888;
}

.button-hover{
  background: #ECECEC;
}