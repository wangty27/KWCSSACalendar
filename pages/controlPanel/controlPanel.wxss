/* pages/controlPanel/controlPanel.wxss */
.wrapper{
  height: 100vh;
  width: 100vw;
}

.login{
  height: 100vh;
  width: 100vw;
  background: #000000;
  color: #FFFFFF;
  font-size: 35rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  z-index: 100;
}

.body{
  height: 100vh;
  width: 100vw;
  display: flex;
  flex-direction: column;
}

.login-password{
  border: 2rpx solid #FFFFFF;
}

.eventList{
  height: 49vh;
  width: 100vw;
  border-top: 2rpx solid #000000;
  border-bottom: 2rpx solid #000000;
  display: flex;
  flex-direction: column;
}

.eventList-top{
  display: flex;
  justify-content: space-around;
  align-content: center;
  height: 4vh;
  width: 100vw;
  border-bottom: 2rpx solid #000000;
}

.top-sides{
  width: 10vw;
  height: 4vh;
  display: flex;
  justify-content: center;
  align-items: center;
}

.top-title{
  width: 80vw;
  height: 4vh;
  font-size: 33rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.eventList-content{
  height: 44.8vh;
  width: 100vw;
}

.events{
  width: 95vw;
  border: 2rpx solid #000000;
  margin: 2.5vw;
  display: flex;
  flex-direction: column;
}

.events-field{
  width: 91vw;
  margin: 1vh 2vw 1vh 2vw;
  font-size: 28rpx;
}

.events-delete{
  height: 4vh;
  border-top: 2rpx solid #000000;
  display: flex;
  justify-content: center;
  align-items: center;
  color: red;
  font-size: 28rpx;
}

.issueList{
  height: 49vh;
  width: 100vw;
  border-bottom: 2rpx solid #000000;
  border-top: 2rpx solid #000000;
  margin-top: 1vh;
}

.issueList-top{
  height: 4vh;
  width: 100vw;
  border-bottom: 2rpx solid #000000;
  font-size: 33rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.issueList-content{
  height: 44.8vh;
  width: 100vw;
}

.hover{
  background: #ECECEC;
}